# Create variable types
makl_vars_def       "h"     "Header variables"
makl_vars_def       "mk"    "Makefile variables"
makl_vars_def       "cf"    "Internal configuration vars"


# Set defaults

# default language is C
makl_set    "__C__" 1

# installation directory
makl_set            "__prefix__"    "/usr/local" 

# default directory for configuration test files
makl_set            "__test_dir__"  `pwd`/build
