#!/bin/sh
#
# $Id: configure,v 1.2 2006/11/03 22:00:31 tho Exp $

export MAKL_DIR=`pwd`/../

. ${MAKL_DIR}/cf/makl.init

makl_args_init "$@"

# set OBJFORMAT for shared lib build on PPC MacOSX
[ "`uname -ps`" = "Darwin powerpc" ] && makl_set_var_mk "OBJFORMAT" "mach-o"

makl_args_handle "$@"

. ${MAKL_DIR}/cf/makl.term
